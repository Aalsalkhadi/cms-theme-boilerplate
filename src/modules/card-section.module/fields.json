[
  {
    "label": "Card",
    "name": "card",
    "type": "group",
    "occurrence": {
      "default": 3,
      "min": 1,
      "sorting_label_field": "card.title"
    },
    "children": [
      {
        "label": "Image",
        "name": "image",
        "type": "image",
        "responsive": true,
        "resizable": true,
        "show_loading": true,
        "default": {
          "loading": "lazy"
        }
      },
      {
        "label": "Title",
        "name": "title",
        "id": "card.title",
        "type": "text",
        "default": "This is a title"
      },
      {
        "label": "Title heading type",
        "name": "title_heading_type",
        "type": "choice",
        "choices": [
          [
            "h1",
            "Heading 1"
          ],
          [
            "h2",
            "Heading 2"
          ],
          [
            "h3",
            "Heading 3"
          ],
          [
            "h4",
            "Heading 4"
          ],
          [
            "h5",
            "Heading 5"
          ],
          [
            "h6",
            "Heading 6"
          ]
        ],
        "display": "select",
        "required": true,
        "visibility": {
          "controlling_field": "card.title",
          "controlling_value_regex": "",
          "operator": "NOT_EQUAL"
        },
        "default": "h3"
      },
      {
        "label": "Text",
        "name": "text",
        "type": "text",
        "default": "Contextual advertising can be profitable. It can either pay for your hosting and maintenance costs for you website or it can pay for a lot more."
      }
