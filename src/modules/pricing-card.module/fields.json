[
  {
    "label": "Product tier",
    "name": "tier",
    "id": "tier",
    "type": "text",
    "default": "Free"
  },
  {
    "label": "Product tier heading type",
    "name": "tier_heading_type",
    "type": "choice",
    "choices": [
      ["h1", "Heading 1"],
      ["h2", "Heading 2"],
      ["h3", "Heading 3"],
      ["h4", "Heading 4"],
      ["h5", "Heading 5"],
      ["h6", "Heading 6"]
    ],
    "display": "select",
    "required": true,
    "visibility": {
      "controlling_field": "tier",
      "controlling_value_regex": "",
      "operator": "NOT_EQUAL"
    },
    "default": "h2"
  },
  {
    "label": "Price",
    "name": "price",
    "type": "text",
    "default": "$0"
  },
  {
    "label": "Price timeframe",
    "name": "timeframe",
    "type": "text",
    "default": "/ mo"
  },
  {
    "label": "Features",
    "name": "features",
    "type": "text",
    "occurrence": {
      "default": 4,
      "max": 50,
      "min": 1
    },
    "show_emoji_picker": true,
    "default": [
      "10 users included",
      "2 GB of storage",
      "Email support",
      "Help center access"
    ]
  },
  {
    "label": "Button text",
    "name": "button_text",
    "type": "text",
    "default": "Sign up for free"
  },
  {
    "label": "Button link",
    "name": "button_link",
    "type": "link",
    "supported_types": ["EXTERNAL", "CONTENT", "EMAIL_ADDRESS"],
    "default": {
      "url": {
        "content_id": null,
        "type": "EXTERNAL",
        "href": ""
      },
      "open_in_new_tab": false,
      "no_follow": false
    }
  },
  {
    "label": "Features list icon bullet",
    "name": "feature_icon",
    "type": "icon",
    "default": {
      "name": "check",
      "type": "SOLID",
      "unicode": "f00c"
    }
  },
  {
    "label": "Product description",
    "name": "description",
    "type": "text",
    "default": "For teams that need additional security, control, and support."
  },
  {
    "label": "Button background color",
    "name": "button_bg",
    "type": "color",
    "default": {
      "color": "#494A52",
      "opacity": 100
    }
  },
  {
    "label": "Button text color",
    "name": "button_text_color",
    "type": "color",
    "visibility": {
      "hidden_subfields": {
        "opacity": true
      }
    },
    "default": {
      "color": "#FFFFFF"
    }
  },
  {
    "label": "Style",
    "name": "style",
    "type": "group",
    "tab": "STYLE",
    "children": [
      {
        "label": "Alignment and spacing",
        "name": "alignment_spacing",
        "type": "Group",
        "children": [
          {
            "label": "Alignment",
            "name": "alignment",
            "type": "alignment",
            "alignment_direction": "HORIZONTAL"
          },
          {
            "label": "Spacing",
            "name": "spacing",
            "type": "spacing"
          }
        ]
      },
      {
        "label": "Background",
        "name": "background",
        "type": "group",
        "children": [
          {
            "label": "Background type",
            "name": "bg_type",
            "display": "radio",
            "type": "choice",
            "choices": [
              ["none", "None"],
              ["bg_color", "Background color"],
              ["bg_gradient", "Background gradient"],
              ["bg_image", "Background image"]
            ],
            "default": "none"
          },
          {
            "label": "Background color",
            "name": "bg_color",
            "type": "color",
            "visibility": {
              "controlling_field": "style.background.bg_type",
              "controlling_value_regex": "bg_color",
              "operator": "EQUAL"
            }
          },
          {
            "label": "Background gradient",
            "name": "bg_gradient",
            "type": "gradient",
            "visibility": {
              "controlling_field": "style.background.bg_type",
              "controlling_value_regex": "bg_gradient",
              "operator": "EQUAL"
            }
          },
          {
            "label": "Background image",
            "name": "bg_image",
            "type": "backgroundimage",
            "visibility": {
              "controlling_field": "style.background.bg_type",
              "controlling_value_regex": "bg_image",
              "operator": "EQUAL"
            }
          }
        ]
      },
      {
        "label": "Border",
        "name": "border",
        "type": "border"
      },
      {
        "label": "Typgraphy",
        "name": "typography",
        "type": "group",
        "children": [
          {
            "label": "Font",
            "name": "font",
            "type": "font"
          }
        ]
      }
    ]
  }
]
