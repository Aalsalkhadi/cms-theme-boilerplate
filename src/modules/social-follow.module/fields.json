            "content_id": null,
            "href": "https://www.linkedin.com",
            "type": "EXTERNAL"
          }
        },
        "accessibility": {
          "title": "Follow us on LinkedIn"
        }
      },
      {
        "social_account": "twitter",
        "social_link": {
          "no_follow": false,
          "open_in_new_tab": true,
          "url": {
            "content_id": null,
            "href": "https://www.twitter.com",
            "type": "EXTERNAL"
          }
        },
        "accessibility": {
          "title": "Follow us on Twitter"
        }
      },
      {
        "social_account": "instagram",
        "social_link": {
          "no_follow": false,
